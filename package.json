{
  "name": "prompt-pilot",
  "displayName": "Prompt Pilot",
  "description": "Schedule automatic AI prompts with cron expressions",
  "version": "0.1.0",
  "publisher": "yamapan",
  "license": "CC-BY-NC-SA-4.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/aktsmm/vscode-copilot-scheduler"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "copilot",
    "scheduler",
    "cron",
    "automation",
    "prompt"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "promptPilot.createTask",
        "title": "%command.createTask%",
        "category": "Copilot Scheduler"
      },
      {
        "command": "promptPilot.createTaskGui",
        "title": "%command.createTaskGui%",
        "category": "Copilot Scheduler",
        "icon": "$(add)"
      },
      {
        "command": "promptPilot.listTasks",
        "title": "%command.listTasks%",
        "category": "Copilot Scheduler"
      },
      {
        "command": "promptPilot.deleteTask",
        "title": "%command.deleteTask%",
        "category": "Copilot Scheduler",
        "icon": "$(trash)"
      },
      {
        "command": "promptPilot.toggleTask",
        "title": "%command.toggleTask%",
        "category": "Copilot Scheduler"
      },
      {
        "command": "promptPilot.runNow",
        "title": "%command.runNow%",
        "category": "Copilot Scheduler",
        "icon": "$(play)"
      },
      {
        "command": "promptPilot.copyPrompt",
        "title": "%command.copyPrompt%",
        "category": "Copilot Scheduler",
        "icon": "$(copy)"
      },
      {
        "command": "promptPilot.editTask",
        "title": "%command.editTask%",
        "category": "Copilot Scheduler",
        "icon": "$(edit)"
      },
      {
        "command": "promptPilot.duplicateTask",
        "title": "%command.duplicateTask%",
        "category": "Copilot Scheduler"
      },
      {
        "command": "promptPilot.openSettings",
        "title": "%command.openSettings%",
        "category": "Copilot Scheduler",
        "icon": "$(settings-gear)"
      },
      {
        "command": "promptPilot.showVersion",
        "title": "%command.showVersion%",
        "category": "Copilot Scheduler",
        "icon": "$(info)"
      }
    ],
    "configuration": {
      "title": "Copilot Scheduler",
      "properties": {
        "promptPilot.enabled": {
          "type": "boolean",
          "default": true,
          "description": "%config.enabled%"
        },
        "promptPilot.showNotifications": {
          "type": "boolean",
          "default": true,
          "description": "%config.showNotifications%"
        },
        "promptPilot.logLevel": {
          "type": "string",
          "default": "info",
          "enum": [
            "none",
            "error",
            "info",
            "debug"
          ],
          "enumDescriptions": [
            "%config.logLevel.none%",
            "%config.logLevel.error%",
            "%config.logLevel.info%",
            "%config.logLevel.debug%"
          ],
          "description": "%config.logLevel%"
        },
        "promptPilot.language": {
          "type": "string",
          "default": "auto",
          "enum": [
            "auto",
            "en",
            "ja"
          ],
          "enumDescriptions": [
            "%config.language.auto%",
            "%config.language.en%",
            "%config.language.ja%"
          ],
          "description": "%config.language%"
        },
        "promptPilot.timezone": {
          "type": "string",
          "default": "",
          "description": "%config.timezone%"
        },
        "promptPilot.chatSession": {
          "type": "string",
          "default": "new",
          "enum": [
            "new",
            "continue"
          ],
          "enumDescriptions": [
            "%config.chatSession.new%",
            "%config.chatSession.continue%"
          ],
          "description": "%config.chatSession%"
        },
        "promptPilot.defaultScope": {
          "type": "string",
          "default": "workspace",
          "enum": [
            "global",
            "workspace"
          ],
          "enumDescriptions": [
            "%config.defaultScope.global%",
            "%config.defaultScope.workspace%"
          ],
          "description": "%config.defaultScope%"
        },
        "promptPilot.globalPromptsPath": {
          "type": "string",
          "default": "",
          "description": "%config.globalPromptsPath%"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "promptPilot",
          "title": "Prompt Pilot",
          "icon": "images/sidebar-icon.svg"
        }
      ]
    },
    "views": {
      "promptPilot": [
        {
          "id": "promptPilotTasks",
          "name": "%view.tasks%"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "promptPilot.createTaskGui",
          "when": "view == promptPilotTasks",
          "group": "navigation@1"
        },
        {
          "command": "promptPilot.openSettings",
          "when": "view == promptPilotTasks",
          "group": "navigation@2"
        },
        {
          "command": "promptPilot.showVersion",
          "when": "view == promptPilotTasks",
          "group": "navigation@3"
        }
      ],
      "view/item/context": [
        {
          "command": "promptPilot.runNow",
          "when": "view == promptPilotTasks && viewItem =~ /Task$/",
          "group": "inline@1"
        },
        {
          "command": "promptPilot.copyPrompt",
          "when": "view == promptPilotTasks && viewItem =~ /Task$/",
          "group": "inline@2"
        },
        {
          "command": "promptPilot.editTask",
          "when": "view == promptPilotTasks && viewItem =~ /Task$/",
          "group": "inline@3"
        },
        {
          "command": "promptPilot.deleteTask",
          "when": "view == promptPilotTasks && viewItem =~ /Task$/",
          "group": "inline@4"
        },
        {
          "command": "promptPilot.runNow",
          "when": "view == promptPilotTasks && viewItem =~ /Task$/",
          "group": "1_actions@1"
        },
        {
          "command": "promptPilot.toggleTask",
          "when": "view == promptPilotTasks && viewItem =~ /Task$/",
          "group": "1_actions@2"
        },
        {
          "command": "promptPilot.editTask",
          "when": "view == promptPilotTasks && viewItem =~ /Task$/",
          "group": "2_edit@1"
        },
        {
          "command": "promptPilot.duplicateTask",
          "when": "view == promptPilotTasks && viewItem =~ /Task$/",
          "group": "2_edit@2"
        },
        {
          "command": "promptPilot.deleteTask",
          "when": "view == promptPilotTasks && viewItem =~ /Task$/",
          "group": "3_delete@1"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "compile": "npm run esbuild-base -- --sourcemap",
    "watch": "npm run esbuild-base -- --sourcemap --watch",
    "pretest": "tsc -p ./",
    "test": "node ./out/test/runTest.js",
    "lint": "eslint src --ext ts"
  },
  "dependencies": {
    "cron-parser": "^4.9.0"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vscode/test-electron": "^2.3.0",
    "esbuild": "^0.27.2",
    "eslint": "^8.0.0",
    "glob": "^10.0.0",
    "mocha": "^10.2.0",
    "typescript": "^5.0.0"
  }
}
