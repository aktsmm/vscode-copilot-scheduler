{
  "version": "2.0.0",
  "options": {
    "cwd": "${workspaceFolder}",
    "shell": {
      "executable": "C:/Program Files/PowerShell/7/pwsh.exe",
      "args": ["-NoProfile", "-Command"]
    }
  },
  "tasks": [
    {
      "type": "npm",
      "script": "watch",
      "problemMatcher": "$tsc-watch",
      "isBackground": true,
      "presentation": {
        "reveal": "never"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "npm: compile",
      "type": "shell",
      "command": "npm run compile",
      "problemMatcher": "$tsc",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "build"
    }
  ]
}
